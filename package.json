{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "HTML Portfolio w/SASS",
  "author": "Michael Foster",
  "scripts": {
    "sass": "sass src/scss:build/css",
    "sass:watch": "sass --watch src/scss:build/css",
    "watch": "nodemon --watch src -e js,html,md,liquid --exec \"npm run build\"",
    "serve": "browser-sync start --server build --files 'build/**/*' --port 8080 --no-notify",
    "start": "concurrently \"npm run sass:watch\" \"npm run watch\" \"npm run serve\"",
    "build": "drippy build && npm run sass && cp -R src/js build/js"
  },
  "devDependencies": {
    "browser-sync": "^3.0.3",
    "concurrently": "^9.1.1",
    "drippy-liquid": "^0.1.6",
    "nodemon": "^3.1.9",
    "sass": "^1.83.0"
  }
}
